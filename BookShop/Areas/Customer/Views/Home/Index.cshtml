@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-3 col-sm-6 mb-4">
            <div class="card border-0 shadow-sm border-top border-5 rounded h-100" style="width: 80%; height: 450px;">
                <img src="@product.ImageUrl" class="card-img-top rounded-top" alt="@product.Title" style="height: 180px; width: 100%; object-fit: contain; padding: 10px;" />
                <div class="card-body p-2" style="padding: 10px;">
                    <h6 class="card-title text-dark text-uppercase text-center" style="font-size: 14px; margin-bottom: 5px;">@product.Title</h6>
                    <p class="text-warning text-center mb-1" style="font-size: 12px;">by @product.Author</p>
                    <p class="text-muted text-center mb-1" style="font-size: 12px;">
                        List Price: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span>
                    </p>
                    <p class="text-dark text-center mb-2" style="font-size: 12px;">
                        As low as: <span class="fw-bold">@product.Price100.ToString("c")</span>
                    </p>
                </div>
                <div class="card-footer text-center bg-white border-0 p-2">
                    <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 w-100 btn-sm" style="font-size: 12px;">
                        <i class="bi bi-info-circle me-1"></i>Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>
