@model Product

<form method="post">
    <div class="card shadow border-0 mx-auto my-4" style="width: 90%; max-width: 600px; height: auto;">
        <div class="card-header bg-secondary bg-gradient text-light py-3">
            <div class="text-center">
                <h3 class="text-white text-uppercase mb-0">@Model.Title</h3>
                <p class="text-white-50 fw-semibold mb-0">@Model.Author</p>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-12 text-start">
                    <a asp-action="Index" class="btn btn-outline-primary bg-gradient fw-semibold btn-sm text-uppercase">
                        <small>Back to Home</small>
                    </a>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12 col-lg-4 text-center">
                    <!-- Increased image height to 200px, width 100% -->
                    <img src="@Model.ImageUrl" style="height: 200px; width: 100%; object-fit: contain;" class="rounded" />
                </div>
                <div class="col-12 col-lg-8">
                    <div class="mb-2">
                        <span class="badge bg-secondary">@Model.Category.Name</span>
                    </div>
                    <div class="mb-2">
                        <h6 class="text-dark text-opacity-50">ISBN: @Model.ISBN</h6>
                    </div>
                    <div class="mb-2">
                        <h6 class="text-dark text-opacity-50">
                            List Price: <span class="text-decoration-line-through">@Model.ListPrice.ToString("c")</span>
                        </h6>
                    </div>
                    <div class="row text-center mb-2">
                        <div class="col-3 bg-white border-bottom p-1">
                            <div class="text-dark text-opacity-50 fw-semibold">Quantity</div>
                        </div>
                        <div class="col-3 bg-white border-bottom p-1">
                            <div class="text-dark text-opacity-50 fw-semibold">1-50</div>
                        </div>
                        <div class="col-3 bg-white border-bottom p-1">
                            <div class="text-dark text-opacity-50 fw-semibold">51-100</div>
                        </div>
                        <div class="col-3 bg-white border-bottom p-1">
                            <div class="text-dark text-opacity-50 fw-semibold">100+</div>
                        </div>
                    </div>
                    <div class="row text-center mb-3">
                        <div class="col-3 bg-white text-warning fw-bold p-1">
                            <div>Price</div>
                        </div>
                        <div class="col-3 bg-white text-warning fw-bold p-1">
                            <div>@Model.Price.ToString("c")</div>
                        </div>
                        <div class="col-3 bg-white text-warning fw-bold p-1">
                            <div>@Model.Price50.ToString("c")</div>
                        </div>
                        <div class="col-3 bg-white text-warning fw-bold p-1">
                            <div>@Model.Price100.ToString("c")</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <p class="text-secondary lh-sm">@Html.Raw(@Model.Description)</p>
                    </div>
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white border-0 fw-semibold">Count</span>
                            <input type="number" value="1" class="form-control text-end" min="1" />
                        </div>
                    </div>
                    <div>
                        <button type="submit" disabled class="btn btn-primary bg-gradient w-100 py-2 text-uppercase fw-semibold">
                            Add to Cart
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
